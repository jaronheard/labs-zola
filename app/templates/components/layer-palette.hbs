    {{#labs-ui/layer-group-toggle
        label=layerGroups.coastal-zone-boundary.legend.label
        tooltip=layerGroups.coastal-zone-boundary.legend.tooltip
        icon=layerGroups.coastal-zone-boundary.legend.icon
